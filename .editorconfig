; Top-most EditorConfig file
root = true

; Global settings
[*]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{txt,md}]
indent_style = space
indent_size = 4
charset = utf-8

; VSCode
[{launch.json,tasks.json}]
indent_style = space
indent_size = 4
charset = utf-8
insert_final_newline = false
